<!DOCTYPE html>
<html lang="en-US">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Task Master</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar bg-info">
    <a class="navbar-brand text-light p-3" href="/">TM</a>
  </nav>
  <div class="container">
    <div style="margin-top: 80px;" class="text-center p-5 mb-4 bg-light">
      <h1 class="display-4">Task Master <span role="img" aria-label="Memo">ğŸ“</span></h1>
      <h4 class="mt-4">Unleash Your Potential: Remember, Record, Succeed!</h4>
      {{#if logged_in}}
      <a class="btn btn-primary btn-lg mt-4" href="./notes.html" role="button">Get Started</a>
      <a href="/profile">Profile</a>
      <button class="no-button" id="logout">Logout</button>
      {{else}}
      <a href="/login">Login</a>
      {{/if}}
    </div>
  </div>
  <script id="template" type="text/x-handlebars-template">
    <div class="container">
      <div style="margin-top: 80px;" class="text-center p-5 mb-4 bg-light">
        <h1 class="display-4">{{title}} <span role="img" aria-label="Memo">ğŸ“</span></h1>
        <h4 class="mt-4">{{subtitle}}</h4>
        {{#if logged_in}}
        <a class="btn btn-primary btn-lg mt-4" href="{{link}}" role="button">{{buttonText}}</a>
        <a href="/profile">Profile</a>
        <button class="no-button" id="logout">Logout</button>
        {{else}}
       <a href="../../public/js/login.js">Login</a>
        {{/if}}
      </div>
    </div>
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  <script>
    // Define data for the Handlebars template
    var data = {
      title: "Task Master",
      subtitle: "Unleash Your Potential: Remember, Record, Succeed!",
      link: "./notes.html",
      buttonText: "Get Started",
      logged_in: false // Change this to true if the user is logged in
    };

    // Compile the Handlebars template
    var source = document.getElementById("template").innerHTML;
    var template = Handlebars.compile(source);

    // Render the template with the data and insert it into the body
    var html = template(data);
    document.body.innerHTML += html;
  </script>
</body>

</html>
